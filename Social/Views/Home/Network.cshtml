@{
    ViewBag.Title = "Network";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-9">
    <div class="row">
        <div class="col-md-10">
            <!-- input -->
            <div class="fancy-form">
                <i class="fa fa-user-plus"></i>
                <input type="email" class="form-control" id="inivt-email" placeholder="Connection request">
                <span class="fancy-tooltip top-right">
                    <!-- positions: .top-left | .top-right -->
                    <em>Connection request!</em>
                </span>
            </div>
        </div>
        <div class="col-md-2"><button type="button" class="btn btn-success btn-block" id="init_conn">Send Request</button></div>
    </div>
    <br />
    <div id="msg"></div>
    <div class="">
        <div class="mynetwork row"></div>
    </div>
</div>


<script>

    var pageIndex = 0;
$(document).ready(function () {
    getNetwork();

    $('#init_conn').click(function () {
        let email = $('#inivt-email').val();
        console.log(email);
        $.ajax({
            url: '@Url.Action("SendRequest", "Home")',
            method: "post",
            data: "{email:" + JSON.stringify(email) + "}",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (result) {
                if (result.check == true) {
                    sessionStorage.setItem("message", result.message);
                    //location.href = '@Request.Url.AbsoluteUri';
                    $('#msg').html(result.message);
                } else {
                    $('#msg').html(result.message);
                }
                $('body').waitMe('hide');
            },
            error: function (r) {
                //alert(r.responseText);
                $('body').waitMe('hide');
                $('#msg').html(r.statusText);
            }
        });
    });
    countNewRequest();

    });
    function getNetwork() {
        run_waitMe($('body'), 1, "win8");
         $.ajax({
            url: '@Url.Action("LoadNetwork", "Home")',
            method: "post",
            contentType: "application/json; charset=utf-8",
            data: "{page:"+pageIndex+", count:4}",
            dataType: "json",
            success: function (data) {
                let output = '';
                console.log(data);
                $.each(data.element, function (index, value) {
                    output += value;
                    console.log(value);
                    console.log("=================");
                });
                $('.mynetwork').html(output);
                $('body').waitMe('hide');
            },
            error: function (r) {
                //alert(r.responseText);
                $('body').waitMe('hide');
            }
        });
    }
    
function countNewRequest() {
    $.ajax({
        url: '@Url.Action("CountNewRequest", "Home")',
        method: "post",
        contentType: "application/json; charset=utf-8",
        dataType: "json",
        success: function (result) {
            console.log(result);
            $('#cc').html(result.count);
            //$('body').waitMe('hide');
        },
        error: function (r) {
            //alert(r.responseText);
            $('body').waitMe('hide');
        }
    });
}
    function run_waitMe(el, num, effect) {
        text = 'Please wait...';
        fontSize = '';
        switch (num) {
            case 1:
                maxSize = '';
                textPos = 'vertical';
                break;
            case 2:
                text = '';
                maxSize = 30;
                textPos = 'vertical';
                break;
            case 3:
                maxSize = 30;
                textPos = 'horizontal';
                fontSize = '18px';
                break;
        }
        console.log(effect)
        el.waitMe({
            effect: effect,
            text: text,
            bg: 'rgba(255,255,255,0.7)',
            color: '#000',
            maxSize: maxSize,
            source: 'img.svg',
            textPos: textPos,
            fontSize: fontSize,
            onClose: function () { }
        });
    }
</script>