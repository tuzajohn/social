<!-- RIGHT -->
<div class="col-lg-3 col-md-3 col-sm-3">

    <!-- FEATURED -->
    <div class="margin-bottom-60">

        <a href="~/home/network"><h2 class="owl-featured">New Request (<span id="cc">0</span>)</h2></a>
        <div class="owl-carousel featured" data-plugin-options='{"singleItem": true, "stopOnHover":false, "autoPlay":false, "autoHeight": false, "navigation": true, "pagination": false}' id="con">

        </div>

    </div>
    <!-- /FEATURED -->
    <!-- HTML BLOCK -->
    <div class="margin-bottom-60">
        <h4>NEW CONNECTION</h4>
        <p>Initiate a connection</p>

        <div>
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                <input type="email" id="inivt-email" name="email" class="form-control required" placeholder="Enter your Email">
                <span class="input-group-btn">
                    <button class="btn btn-success" id="init_conn" type="button"><i class="glyphicon glyphicon-send"></i></button>
                </span>
            </div>
        </div>
        <br />
        <div class="conn_request"></div>
    </div>
    <!-- /HTML BLOCK -->

</div>
<script>
$(document).ready(function () {
    $('#inivt-email').keyup(function (e) {
        if (e.keyCode == 13) {
            sendinvite();
        }
    });
    $('#init_conn').click(function () {
        sendinvite();
    });
    countNewRequest();
    loadnewconnection();
});
$(document).on('click', '.accept', function () {
    //alert($(this).attr('id'));
    accept($(this).attr('id'));
    countNewRequest();
});
$(document).on('click', '.refuse', function () {
    //alert($(this).attr('id'));
    delete_($(this).attr('id'));
    countNewRequest();
});

function sendinvite() {
    let email = $('#inivt-email').val();
    run_waitMe($('body'), 1, "win8");
    $.ajax({
        url: '@Url.Action("SendRequest", "Home")',
        method: "post",
        data: "{email:" + JSON.stringify(email) + "}",
        contentType: "application/json; charset=utf-8",
        dataType: "json",
        success: function (result) {
            if (result.check == true) {
                sessionStorage.setItem("message", result.message);
                //location.href = '@Request.Url.AbsoluteUri';
                $('.conn_request').html(result.message);
                $('#inivt-email').val("");
            } else {
                $('.conn_request').html(result.message);
                $('#inivt-email').val("");
            }
            $('body').waitMe('hide');
        },
        error: function (r) {
            //alert(r.responseText);
            $('body').waitMe('hide');
            $('.conn_request').html(r.statusText);
        }
    });
    }
function countNewRequest() {
    $.ajax({
        url: '@Url.Action("CountNewRequest", "Home")',
        method: "post",
        contentType: "application/json; charset=utf-8",
        dataType: "json",
        success: function (result) {
            console.log(result);
            $('#cc').html(result.count);
            //$('body').waitMe('hide');
        },
        error: function (r) {
            //alert(r.responseText);
            $('body').waitMe('hide');
        }
    });
}
function accept(id) {
    //run_waitMe($('#con'), 1, "win8");
    console.log(id);
    $.ajax({
        url: '@Url.Action("AcceptRequest", "Home")',
        method: "post",
        contentType: "application/json; charset=utf-8",
        data: "{id:" + JSON.stringify(id) + "}",
        dataType: "json",
        success: function (result) {
            if (result.check == true) {
                alert("Success");
                loadnewconnection();
            }
        //$('#con').waitMe('hide');
        },
        error: function (r) {
            //alert(r.responseText);
            //$('body').waitMe('hide');
            console.log(r.statusText);
        }
    });
}
function delete_(id) {
    run_waitMe($('#con'), 1, "win8");
    $.ajax({
        url: '@Url.Action("DeleteRequest", "Home")',
        method: "post",
        contentType: "application/json; charset=utf-8",
        data: "{id:" + JSON.stringify(id) + "}",
        dataType: "json",
        success: function (result) {
            if (result.check == true) {
                loadnewconnection();
            }
        $('#con').waitMe('hide');
        },
        error: function (r) {
            //alert(r.responseText);
            //$('body').waitMe('hide');
        }
    });
}
function loadnewconnection() {
    run_waitMe($('#con'), 1, "win8");
    $.ajax({
        url: '@Url.Action("LoadAllRequest", "Home")',
        method: "post",
        contentType: "application/json; charset=utf-8",
        dataType: "json",
        success: function (result) {
            console.log(result);
            let d = '';
            $.each(result.element, function (index, value) {
                d += value;
            });
            $('#con').html(d);
            $('#con').waitMe('hide');
        },
        error: function (r) {
            //alert(r.responseText);
            //$('body').waitMe('hide');
        }
    });
}
function run_waitMe(el, num, effect) {
    text = 'Please wait...';
    fontSize = '';
    switch (num) {
        case 1:
            maxSize = '';
            textPos = 'vertical';
            break;
        case 2:
            text = '';
            maxSize = 30;
            textPos = 'vertical';
            break;
        case 3:
            maxSize = 30;
            textPos = 'horizontal';
            fontSize = '18px';
            break;
    }
    console.log(effect)
    el.waitMe({
        effect: effect,
        text: text,
        bg: 'rgba(255,255,255,0.7)',
        color: '#000',
        maxSize: maxSize,
        source: 'img.svg',
        textPos: textPos,
        fontSize: fontSize,
        onClose: function () { }
    });
}
</script>
